{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.lp_use_custom_colors -%}
    .lp-pct-{{ section.id }} {
      --lp-bg: {{ section.settings.lp_bg }};
      --lp-text: {{ section.settings.lp_text }};
      --lp-heading: {{ section.settings.lp_heading }};
      --lp-accent: {{ section.settings.lp_accent }};
    }
    .lp-pct-{{ section.id }} { background-color: var(--lp-bg) !important; }
    .lp-pct-{{ section.id }} .page-width { background-color: transparent !important; }
    .lp-pct-{{ section.id }} .page-width .title { color: var(--lp-heading) !important; }
    .lp-pct-{{ section.id }} p, 
    .lp-pct-{{ section.id }} .rte { color: var(--lp-text) !important; }
    
    /* Override Ring Colors - Fix for RGB/HEX mismatch */
    .lp-pct-{{ section.id }} .content-and-percentages {
       --percent-accent: var(--lp-accent) !important;
       --color-button: var(--lp-accent) !important;
    }
    .lp-pct-{{ section.id }} .percentages__percentage p { color: var(--lp-accent) !important; }

    /* Override Gradient to support HEX variable (Original uses rgb() wrapper) */
    .lp-pct-{{ section.id }} .percentages__percentage::before {
      background: conic-gradient(
        from 0deg at 50% 50%,
        var(--lp-accent) 0%,
        var(--lp-accent) var(--percentage),
        var(--lp-bg) var(--percentage),
        var(--lp-bg) 100%
      ) !important;
    }
  {%- endif -%}
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} lp-pct-{{ section.id }}">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="content-and-percentages{% if section.settings.layout == 'percentages_first' %} content-and-percentages--percentages-first{% endif %}{% if section.settings.title == blank and section.settings.text == blank and section.settings.image == blank %} content-and-percentages--no-content{% endif %}">
      {%- unless section.settings.title == blank
        and section.settings.text == blank
        and section.settings.image == blank
      -%}
        <div class="content-container center">
          {%- unless section.settings.title == blank -%}
            <h2 class="title {{ section.settings.heading_size }}">
              {{ section.settings.title | escape }}
            </h2>
          {%- endunless -%}
          {%- unless section.settings.text == blank -%}
            {{ section.settings.text }}
          {%- endunless -%}
          {%- unless section.settings.image == blank -%}
            <div class="content-and-percentages__image">
              {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', width: 600 }}
            </div>
          {%- endunless -%}
        </div>
      {%- endunless -%}
      <div class="percentages-container">
        <div class="percentages">
          {%- unless section.settings.percentages_headline == blank -%}
            <h3 class="title {{ section.settings.percentages_headline_size }} {% if section.settings.percentages_headline_alignment == 'center' %} center{% endif %}">
              {{ section.settings.percentages_headline | escape }}
            </h3>
          {%- endunless -%}
          <div class="percentages__rows-container">
            {%- for row in section.blocks -%}
              <div class="percentages__row">
                <div class="percentages__percentage" style="--percentage: {{ row.settings.percentage }}%">
                  <p>{{ row.settings.percentage }}%</p>
                </div>
                <div class="percentages__text">
                  {{ row.settings.row_text }}
                </div>
              </div>
            {%- endfor -%}
          </div>
          {%- unless section.settings.caption == blank -%}
            <div class="percentages__caption">
              {{ section.settings.caption }}
            </div>
          {%- endunless -%}
          {%- if section.settings.button_label != blank -%}
            <a
              {% if section.settings.link %}
                href="{{ section.settings.link }}"
              {% else %}
                role="link" aria-disabled="true"
              {% endif %}
              class="button btn--mt-center {% if section.settings.button_style_secondary %}button--secondary{% else %}button--primary{% endif %}"
            >
              {{- section.settings.button_label | escape -}}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

